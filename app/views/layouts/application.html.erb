<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if session[:current_user_id] != nil %>
      <br>
      Logged in as:<%= link_to User.find(session[:current_user_id]).name, user_path(session[:current_user_id]) %>
      User ID:<%= link_to session[:current_user_id], user_path(session[:current_user_id]) %>
      <%= link_to "Log out", session_path(session[:current_user_id]), method: "delete"%>
      <br>
    <% end %>
    <br>

    <%= yield %>
  </body>
</html>
